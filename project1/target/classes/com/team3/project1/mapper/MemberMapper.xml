<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.team3.project1.mapper.MemberMapper">
  	
  	<!-- 회원가입 -->
  	<insert id="memberJoin">
  		insert into site_member values(#{memberId}, #{memberPw}, #{memberName}, #{memberMail}, #{memberAddr1}, #{memberAddr2}, #{memberAddr3}, 0, sysdate )
  	</insert>
  	
  	<!-- 아이디 중복검사 -->
  	<select id="idCheck" resultType="int">
  	
  		select count(*) from book_member where memberId = #{memberId}
  	
  	</select>
  	
  	<!-- 로그인 -->
    <select id="memberLogin" resultType="com.team3.project1.model.MemberVO">

		  select memberId, memberPw, memberName, adminck from site_member where memberId = #{memberId}
          <!-- select memberId, memberName, adminck, money, point from book_member where memberId = #{memberId} and memberPw = #{memberPw} -->

	</select>
      
  </mapper>